<form action="/<%= id %>" method="POST">
  <p>
    Edit your Idea:
  </p>
  <input type="hidden" name="_method" value="PUT" />
  <input type='text' name='title' value="<%= idea.title %>" />
  <br/>
  <textarea name='description'>
    <%= idea.description %>
  </textarea>
  <br/>
  <input type='submit' />
</form>
